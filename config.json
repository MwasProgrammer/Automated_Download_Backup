{
    "project_name": "Automated Download Backup",
    "version": "1.0.0",
    "description": "A project to automate the backup of downloaded files from the internal local drive C to the external backup drive.",
    "source_settings": {
        "target_directory_name": "Downloads",
        "use_envs_vars": true,
        "sandbox_mode": true,  
        "target_directory_path":"tests/sandbox/downloads"
    },

    "backup_target": {
        "volume_label": "BACKUP_DRIVE",
        "backup_directory_name": "Downloads_Backup"

    },

    "safety_measures": {
        "forbidden_extensions": [".crdownload", ".tmp", ".part"],
        "atomic_suffix": ".transferring"
    }

}